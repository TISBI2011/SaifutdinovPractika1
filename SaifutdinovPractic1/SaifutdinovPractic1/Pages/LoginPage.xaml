<Page x:Class="SaifutdinovPractic1.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SaifutdinovPractic1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Image Source="/SaifutdinovPractic1;component/image/art-naruto-ramen-paren-piala-7358.jpg"/>
        <StackPanel>
            <TextBlock Text="Login"/>
            <TextBox x:Name = "TBLogin"/>
            <TextBlock Text="Password"/>
            <TextBox x:Name="TBPassword"/>
            <Button x:Name="BLogin" Content="Login" Click="BLogin_Click" FontSize="15" Margin="615,350,35,350" Height="40"/>
        </StackPanel>
    </Grid>
</Page>
